<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center|start"
        android:paddingStart="12dp"
        android:paddingEnd="36dp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            app:tint="@color/white"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center"
                android:text="@string/sign_in"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/dot_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:theme="@style/Button.Register.Active">

                <TextView
                    android:id="@+id/dot_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/raleway_medium"
                    android:text="1"
                    android:textSize="12sp" />

            </LinearLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:background="#20FFFFFF"
                android:max="100"
                app:indicatorColor="#0661B5" />

            <LinearLayout
                android:id="@+id/dot_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:theme="@style/Button.Register.Inactive">

                <TextView
                    android:id="@+id/dot_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/raleway_medium"
                    android:text="2"
                    android:textSize="12sp" />

            </LinearLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:background="#20FFFFFF"
                android:max="100"
                app:indicatorColor="#0661B5" />

            <LinearLayout
                android:id="@+id/dot_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:theme="@style/Button.Register.Inactive">

                <TextView
                    android:id="@+id/dot_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/raleway_medium"
                    android:text="3"
                    android:textSize="12sp" />

            </LinearLayout>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:background="#20FFFFFF"
                android:max="100"
                app:indicatorColor="#0661B5" />

            <LinearLayout
                android:id="@+id/dot_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:theme="@style/Button.Register.Inactive">

                <TextView
                    android:id="@+id/dot_text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/raleway_medium"
                    android:text="4"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp" />

        <Button
            android:id="@+id/buttonRegister"
            style="@style/Button.Outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/next"
            android:theme="@style/Button.Outline" />

    </LinearLayout>

</LinearLayout>