<resources>
    <!-- Base application theme. -->
    <style name="Theme.Chatter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Button.Default" parent="Theme.Chatter">
        <item name="android:background">@drawable/button_full</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Outline" parent="Theme.Chatter">
        <item name="colorPrimary">@color/white</item>
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Outline.LightBackground" parent="Theme.Chatter">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Chatter.Register" parent="Theme.Chatter">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="Button.Register.Complete" parent="Theme.Chatter">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_register_complete</item>
    </style>

    <style name="Button.Register.Active" parent="Theme.Chatter">
        <item name="android:textColor">#2C97EB</item>
        <item name="android:background">@drawable/button_register_active</item>
    </style>

    <style name="Button.Register.Inactive" parent="Theme.Chatter">
        <item name="android:textColor">#9CA3AF</item>
        <item name="android:background">@drawable/button_register_inactive</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_text_background</item>
        <item name="android:textCursorDrawable">@drawable/input_cursor</item>
    </style>

    <style name="ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/input_text_background</item>
    </style>

    <style name="Input.Cursor" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
    </style>
</resources>